{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "baseUrl": ".",
    "paths": {
      "tcp-websocket": ["src/index.ts"],
    },

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["src", "examples", "tsup.config.ts"],
  "exclude": ["node_modules", "dist"]
}
